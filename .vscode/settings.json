{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "javascript.validate.enable": false,
  "jest.pathToJest": "yarn test --",

  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
